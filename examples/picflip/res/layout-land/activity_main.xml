<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       xmlns:app="http://schemas.android.com/apk/res/com.quillstone.flickrcommons"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <GridView
            android:id="@+id/pictureGridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:columnWidth="90dp"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:numColumns="4"
            android:stretchMode="spacingWidthUniform"
            android:verticalSpacing="5dp">

        </GridView>

        <LinearLayout
            android:id="@+id/linearlayoutAddMob"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_weight="1.8"
            android:orientation="vertical"
            android:minHeight="80dp">

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Commons Group"
                android:id="@+id/textViewCurrentGroup"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:background="@drawable/translucent_background"/>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAdType"
            android:layout_gravity="center"
            android:background="@drawable/translucent_background"
            android:layout_alignParentStart="false"
            />
    </FrameLayout>

</merge>